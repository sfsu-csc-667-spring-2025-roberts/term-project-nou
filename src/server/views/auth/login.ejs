<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Knewave&family=Poetsen+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik+Spray+Paint&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/authentication.css">
        <link rel="stylesheet" href="/css/global.css">
    </head>
    
    <body>
        <div id = "container">
            
            <h1>Welcome to Uno</h1>
            <p>Please log in to continue</p>
            <% if(locals.error && error !== undefined) { %>
                <div class="error">
                    <p><%= error %></p>
                </div>
            <% } %>

            <form action="/auth/login" method="post">
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Email address"/>
                </div>
                <div >
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required/>
                </div>
                <button type="submit">Login</button>
                <p>No account yet? <a href="/auth/register">Sign up</a></p>
            </form>
        </div>
    </body>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
          const container = document.getElementById("container");
      
          // UNO colors: red, blue, green, yellow
          const colors = [
            "rgba(255, 11, 170, 0.9)",   // Bright Neon Red
            "rgba(0, 228, 255, 0.9)",   // Neon Blue
             "rgba(122, 254, 4, 0.9)",   // Neon Green
            "rgba(255, 244, 24, 0.9)"   // Neon Yellow
          ];
      
          // Randomly select a color
          const randomColor = colors[Math.floor(Math.random() * colors.length)];
      
          // Apply the color to the container
          container.style.setProperty("--glow-color", randomColor);
        });
      </script>
</html>