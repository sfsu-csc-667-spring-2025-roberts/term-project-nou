    <link rel="stylesheet" href="/css/game-board.css" />
    <link rel="stylesheet" href="/css/global.css" />
  </head>
  <body>
    <div class="game-container" data-game-id="<%= gameId %>">
      <header class="game-header">
        <h1>UNO Game: <span id="room-id"><%= gameId %></span></h1>
        <div class="game-info">
          <div class="room-controls">
            <button id="leave-room" class="btn btn-danger">Leave Game</button>
          </div>
        </div>
      </header>

