      <div class="game-board">
        <div class="opponents-area">
          <div id="other-players-container"></div>
        </div>

        <div class="table-area">
          <div class="card-piles">
            <div class="draw-pile" id="draw-pile">
              <div class="uno-card back">
                <div class="card-logo">UNO</div>
              </div>
            </div>
            <div class="discard-pile" id="discard-pile"></div>
          </div>

          <div class="game-status">
            <div id="current-turn">
              <span id="current-player">Waiting for game to start...</span>'s
              turn
            </div>
            <div id="game-direction">
              Direction: <span id="direction-indicator">â†’</span>
            </div>
          </div>

          <div class="game-controls">
            <button id="draw-card" class="btn btn-primary" disabled>
              Draw Card
            </button>
            <button id="say-uno" class="btn btn-warning" disabled>
              Say UNO!
            </button>
          </div>

          <div id="color-selector" class="hidden">
            <h3>Select a color:</h3>
            <div class="color-options">
              <button class="color-btn red" data-color="red"></button>
              <button class="color-btn blue" data-color="blue"></button>
              <button class="color-btn green" data-color="green"></button>
              <button class="color-btn yellow" data-color="yellow"></button>
            </div>
          </div>
        </div>

        <div class="player-area">
          <h3>Your Hand</h3>
          <div class="player-hand" id="my-hand"></div>
        </div>
      </div>
    </div>

    <script type="module" src="/js/game-board.js"></script>
    <script src="/socket.io/socket.io.js"></script>
  </body>
